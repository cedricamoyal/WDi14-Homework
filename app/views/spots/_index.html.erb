<h1>This page should show all the spots</h1>

<%= link_to "New spot", new_region_spot_path(:region_id => @region.id) %>

<% @spots.each do |spot| %>

<p>Name: <%= link_to "#{spot.name}", region_spot_path(:region_id => @region.id, :id => spot.id) %></p>
<p>Address: <%= spot.address %></p>
<p><%= spot.description %></p>

<% end %>
