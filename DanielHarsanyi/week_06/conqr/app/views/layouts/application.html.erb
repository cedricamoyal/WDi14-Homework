<!DOCTYPE html>
<html>
<head>
  <title>Conqr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <%= link_to(image_tag( "conqr_logo.png", :id => "logo" ), "/home" ) %>
    <nav>
      <% if @current_user.is_a?(Client) %>
        <%= link_to "Logout", logout_path, :method => :delete %>
        <%= link_to "Edit Profile", edit_client_path(@current_user) %>
        <%= link_to "Find a Trainer", find_trainer_path %>
        <%= link_to "All Trainers", trainers_path %>
      <% elsif @current_user.is_a?(Trainer) %>
        <%= link_to "Logout", logout_path, :method => :delete %>
        <%= link_to "Edit Profile", edit_trainer_path(@current_user) %>
        <%= link_to "All Clients", clients_path %>
      <% else %>
        <%= link_to( "I'm a PT", new_trainer_path ) %>
        <%= link_to( "Create Account", new_client_path ) %>
        <%= link_to( "Login", login_path ) %>
      <% end %>
    </nav>
    <% if @current_user %>
      <p>Currently logged in as: <%= @current_user.name %></p>
    <% end %>
  </header>
<br>
<br>
<br>
<br>
<br>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<%= yield %>

</body>
</html>



