<%= form_for @trainer do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
  </p>
  <p>
    <%= f.label :fitness_australia_id, "Fitness Australia ID" %>
    <%= f.number_field :fitness_australia_id, :required => true %>
  </p>
  <p>
    <%= f.label :qualifications %>
    <%= f.text_field :qualifications, :required => true %>
  </p>
  <p>
    <%= f.label :training_style, "Training Style" %>
    <%= f.select(:training_style, options_for_select([["Drill Sergeant"],["Encourager"],["Holistic"],["Relaxed"]], (@current_user.training_style if @current_user.is_a?(Trainer)))) %>
  </p>
  <p>
    <%= f.label :training_specialty_areas, "Training Specialty Area" %>
      <%= f.select(:training_specialty_areas, options_for_select([["Body Building"],["Nutrition"],["Weight Loss"],["Pilates"],["Boxing"],["Cardio"],["Crossfit"],["Yoga"],["Martial Arts"],["Toning"],["Calisthenics"],["Tabata"],["Body Transformation"]], (@current_user.training_specialty_areas if @current_user.is_a?(Trainer)))) %>
  </p>
  <p>
    <%= f.label :price, "Hourly Rate" %>
    <%= f.number_field :price, :required => true %>
  </p>
  <% if @current_user.is_a?(Client) %>
    <% if @current_user.admin? == true %>
      <p>
        <%= f.label :rating %>
        <%= f.number_field :rating, :required => true %>
      </p>
    <% end  %>
  <% end  %>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
  </p>
  <p>
    <%= f.label :image, "Profile Image " %>
    <%= f.text_field :image, :required => true %>
  </p>

  <%= f.submit %>
<% end %>
