<%= stylesheet_link_tag 'clients' %>

<div class="clients_index">
<h1>All Clients</h1>

<% @clients.each do |c| %>
    <h3>Client's Name: <%=link_to( c.name, client_path(c.id) ) %></h3>
    <p><%= image_tag( c.image, :class => "thumbnail" ) %> </p>
    <ul>
      <li>Email: <%= mail_to(c.email) %></li>
      <li>Training Interest Areas: <%= c.training_interest_areas if c.training_interest_areas %></li>
      <li>Preferred Training Style: <%= c.preferred_training_style if c.preferred_training_style %></li>
      <li>Location:</li>
      <p><%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=13&size=600x300&maptype=roadmap%20&markers=#{c.latitude},#{c.longitude}" %></p>
    </ul>
    <hr>

<% end %>

</div>
