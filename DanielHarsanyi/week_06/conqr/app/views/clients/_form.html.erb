<%= form_for @client do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
  </p>
  <p>
    <%= f.label :training_interest_areas %>
    <%= f.text_field :training_interest_areas, :required => true %>
  </p>
  <p>
    <%= f.label :preferred_training_style %>
    <%= f.text_field :preferred_training_style, :required => true %>
  </p>
  <p>
    <%= f.label :preferred_location %>
    <%= f.text_field :preferred_location, :required => true %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
  </p>
  <p>
    <%= f.label :image, "Profile Image " %>
    <%= f.text_field :image, :required => true %>
  </p>

  <%= f.submit %>
<% end %>

