<main class=bs-docs-masthead id=content role=main tabindex=-1>
    <div class=container>
        <p class=lead>Picross Adventure Time</p>
        <h3>Your Puzzles</h3>
        <ul id="puzzles">
        <% if @your_puzzles.exists? %>
          <% @your_puzzles.each do |p| %>
            <li>
              <%= link_to p.name, art_path(p.id) %>
              <%= link_to "Edit", edit_art_path(p.id) %>
              <%= link_to "Delete", destroy_art_path(p.id), :method => :delete %>
            </li>
          <% end %>
        <% else %>
        <li>Got none!</li>
        <% end %>
        </ul>

        <h3>All Puzzles</h3>
        <ul id="puzzles">
        <% @puzzles.each do |p| %>
          <li>
            <%= link_to p.name, art_path(p.id) %>
          </li>
        <% end %>
        </ul>
    </div>
</main>
